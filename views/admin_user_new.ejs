<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Novo Usuário</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    .panel{ width:min(520px,100%); }
    .topbar{ display:flex; justify-content:space-between; align-items:center; gap:12px; margin-bottom:16px; }
    .card{ background:#111; border:1px solid rgba(255,255,255,.10); border-radius:18px; padding:18px; box-shadow: var(--shadow); }
    .btn2{ display:inline-block; text-align:center; padding:10px 12px; border-radius:12px; background:#1a1a1a; border:1px solid rgba(239,68,68,.35); color:#fff; font-weight:800; text-decoration:none; }
    .muted{ color: var(--muted); font-size: 13px; }
    .label{ color:#cbd5e1; font-size:13px; margin: 10px 0 6px; display:block; }
    select{ width:100%; padding:10px 12px; border-radius:10px; background:#111; color:#fff; border:1px solid rgba(239,68,68,.35); }
  </style>
</head>
<body>
  <div class="panel">
    <div class="topbar">
      <a class="btn2" href="/admin/users">⬅ Voltar</a>
      <a class="btn2" href="/logout">Sair</a>
    </div>

    <div class="card">
      <div style="color:#fff; font-weight:900; font-size:20px;">Cadastrar funcionário</div>
      <div class="muted">Cria um usuário para acessar o sistema.</div>

      <% if (error) { %>
        <div class="flash" style="margin-top:12px;"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/users">
        <label class="label">Nome</label>
        <div class="field">
          <input name="name" placeholder="Nome completo" required />
        </div>

        <label class="label">Email</label>
        <div class="field">
          <input name="email" type="email" placeholder="email@empresa.com" required />
        </div>

        <label class="label">Senha</label>
        <div class="field">
          <input name="password" type="password" placeholder="Senha" required />
        </div>

        <label class="label">Cargo</label>
        <select name="role">
          <option value="employee" selected>Funcionário</option>
          <option value="admin">Admin</option>
        </select>

        <div style="margin-top:14px;">
          <button class="btn" type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
